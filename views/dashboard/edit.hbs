{{> navigation}}

<div class="container p-4">
    <div class="row">
        <div class="col-md-4">
            <div class="card-text center">
                <div class="card-body">
                    {{#each arr}}
                    <form  method="post">
                        <div class="form-group">
                            <input type="text"
                                   class="form-control"
                                   name="titulo"
                                   placeholder="Título"
                                   value="{{titulo}}"
                                   autofocus
                                   required>
                        </div>
                        <div class="form-group">
                            <input type="color"
                                   class="form-control"
                                   name = "color"
                                   autofocus
                                   value="{{color}}"
                                   required>
                        </div>
                        <div class="form-group">
                        <textarea name="descripcion"
                                  class="form-control"
                                  placeholder="Descripción"
                                  rows="3"
                                  maxlength="200"
                                  required
                        >{{descripcion}}</textarea>
                        </div>

                        <div class="form-group">
                            <button class="btn btn-succes btn-block"
                                    style=background-color:green>
                                Guardar
                            </button>
                    {{/each}}
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>